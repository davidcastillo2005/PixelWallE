<Window x:Class="PixelWallE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelWallE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Grid.RowSpan="5"
            Width="10"
            Background="WhiteSmoke"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeDirection="Columns"/>
        <GridSplitter
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            Background="WhiteSmoke"
            VerticalAlignment="Center"
            ResizeDirection="Rows"
            Height="10"/>
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Background="WhiteSmoke"
            Orientation="Horizontal">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Zoom"/>
            <TextBox
                Name="ZoomTextBox"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Text="100%"
                MaxLines="1"
                Width="35.23"
                KeyDown="ZoomTextBox_KeyDown"/>
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="4"
            Name="MainScrollViewer"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            Background="LightGray">
            <Viewbox
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Stretch="Uniform">
                <Canvas
                    Name="MainCanvas"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White">
                </Canvas>
            </Viewbox>
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Grid.Column="0" 
            Background="LightGray">
            <TabControl>
                <TabItem 
                    Header="Output"
                    IsSelected="True">
                    <RichTextBox
                        Name="OutputTextBox"
                        FontFamily="Consolas"
                        FontSize="14"
                        IsReadOnly="true"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Auto"
                        Background="WhiteSmoke">
                        <FlowDocument
                            LineHeight="7">
                        </FlowDocument>
                    </RichTextBox>
                </TabItem>
                <TabItem 
                    Header="Problems"
                    Name="ProblemsTab">
                    <RichTextBox
                        Name="ProblemsTextBox"
                        FontFamily="Consolas"
                        FontSize="14"
                        IsReadOnly="true"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Auto"
                        Background="WhiteSmoke">
                        <FlowDocument
                            LineHeight="7">
                            <Paragraph>
                                <Run 
                                    Text="..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Background="WhiteSmoke">
            <Menu
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Background="WhiteSmoke">
                <MenuItem 
                    Header="_File">
                    <MenuItem 
                        Name="NewMenuItem"
                        Header="_New"
                        Click="NewMenuItem_Click"
                        Command="ApplicationCommands.New"/>
                    <MenuItem
                        Header="_Open"
                        Command="ApplicationCommands.Open"/>
                    <MenuItem
                        Header="_Save"
                        Command="ApplicationCommands.Save"/>
                    <MenuItem
                        Header="Save _As..."
                        Command="ApplicationCommands.SaveAs"/>
                    <Separator/>
                    <MenuItem
                        x:Name="ExitMenuItem"
                        Header="_Exit"
                        Click="ExitMenuItem_Click"/>
                </MenuItem>
                <MenuItem 
                    Header="_Edit">
                    <MenuItem 
                        Header="_Deshacer" 
                        Command="ApplicationCommands.Undo"/>
                    <MenuItem 
                        Header="_Rehacer" 
                        Command="ApplicationCommands.Redo"/>
                    <Separator/>
                    <MenuItem 
                        Header="_Cut" 
                        Command="ApplicationCommands.Cut"/>
                    <MenuItem 
                        Header="_Copy" 
                        Command="ApplicationCommands.Copy"/>
                    <MenuItem 
                        Header="_Paste" 
                        Command="ApplicationCommands.Paste"/>
                    <Separator/>
                    <MenuItem 
                        Header="Select _All" 
                        Command="ApplicationCommands.SelectAll"/>
                </MenuItem>
            </Menu>
        </Grid>
        <StatusBar 
            Grid.Row="4"
            Grid.Column="0"
            Background="WhiteSmoke">
            <StatusBarItem>
                <TextBlock
                    Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
        <RichTextBox
            Name="SourceCode"
            Grid.Row="1"
            Grid.Column="0"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontSize="14"
            FontFamily="Consolas"
            Background="White"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            MinWidth="150">
            <FlowDocument
                LineHeight="7">
                <Paragraph>
                    <Run 
                        Text="Write here...">
                    </Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto"
                MinWidth="150"/>
            <ColumnDefinition
                Width="auto"/>
            <ColumnDefinition
                Width="*"
                MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="auto"/>
            <RowDefinition
                Height="*"
                MinHeight="20"/>
            <RowDefinition
                Height="auto"/>
            <RowDefinition
                MinHeight="65"/>
            <RowDefinition 
                Height="auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
