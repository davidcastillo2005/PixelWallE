<Window x:Class="PixelWallE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelWallE"
        mc:Ignorable="d"
        Title="MainWindow" 
		Height="450" 
		Width="800">
    <Grid>
        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Grid.RowSpan="5"
            Width="10"
            Background="WhiteSmoke"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeDirection="Columns"/>
        <GridSplitter
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            Background="WhiteSmoke"
            VerticalAlignment="Center"
            ResizeDirection="Rows"
            Height="10"/>
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Background="WhiteSmoke"
            Orientation="Horizontal">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Zoom"/>
            <TextBox
                Name="ZoomTextBox"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Text="100%"
                MaxLines="1"
                Width="35.23"
                KeyDown="ZoomTextBox_KeyDown"/>
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="4"
            Name="MainScrollViewer"
            Background="LightGray"
			HorizontalScrollBarVisibility="Auto"
			VerticalScrollBarVisibility="Auto">
			<Canvas
                Name="MainCanvas"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White">
			</Canvas>                
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Grid.Column="0" 
            Background="LightGray">
            <TabControl>
                <TabItem 
                    Header="Output"
                    IsSelected="True">
                    <RichTextBox
                        Name="OutputTextBox"
                        FontFamily="Consolas"
                        FontSize="14"
                        IsReadOnly="true"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Auto"
                        Background="WhiteSmoke">
                        <FlowDocument
                            LineHeight="7">
                        </FlowDocument>
                    </RichTextBox>
                </TabItem>
                <TabItem 
                    Header="Problems"
                    Name="ProblemsTab">
                    <RichTextBox
                        Name="ProblemsTextBox"
                        FontFamily="Consolas"
                        FontSize="14"
                        IsReadOnly="true"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Auto"
                        Background="WhiteSmoke">
                    </RichTextBox>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Background="WhiteSmoke">
            <Menu
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Background="WhiteSmoke">
                <MenuItem 
                    Header="File">
                    <MenuItem 
                        Name="NewMenuItem"
                        Header="New"
                        Click="NewMenuItem_Click"/>
                    <MenuItem
                        Header="Open"
						Click="OpenMenuItem_Click"/>
                    <MenuItem
                        Header="Save"
						Click="SaveMenuItem_Click"/>
                    <MenuItem
                        Header="Save As..."
						Click="SaveAsMenuItem_Click"/>
                    <Separator/>
                    <MenuItem
                        x:Name="ExitMenuItem"
                        Header="Exit"
                        Click="ExitMenuItem_Click"/>
                </MenuItem>
                <MenuItem 
                    Header="Edit">
                    <MenuItem 
                        Name="UndoMenuItem"
						Header="Undo"
						Click="UndoMenuItem_Click"/>
                    <MenuItem 
						Name="RedoMenuItem"
                        Header="Redo"
						Click="RedoMenuItem_Click"/>
                    <Separator/>
                    <MenuItem 
						Name="CutMenuItem"
                        Header="Cut"
						Click="CutMenuItem_Click"/>
                    <MenuItem 
						Name="CopyMenuItem"
                        Header="Copy"
						Click="CopyMenuItem_Click"/>
                    <MenuItem 
						Name="PasteMenuItem"
                        Header="Paste"
						Click="PasteMenuItem_Click"/>
                    <Separator/>
                    <MenuItem 
						Name="SelectAllMenuItem"
                        Header="Select All"
						Click="SelectAllMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </Grid>
        <Grid
            Name="StatusGrid"
            Grid.Row = "4"
            Grid.Column="0"
            Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"/>
                <ColumnDefinition
                    Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Margin="3"
                Content="Ready"/>
            <Button
                Grid.Column="1"
                Grid.Row="0"
                Click="Button_Click"
                VerticalContentAlignment="Center"
                Margin="3"
                Content="Start"/>
        </Grid>
        <RichTextBox
            Name="SourceCode"
            Grid.Row="1"
            Grid.Column="0"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontSize="14"
            FontFamily="Consolas"
            Background="White"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            MinWidth="150">
            <FlowDocument
                LineHeight="7">
            </FlowDocument>
        </RichTextBox>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto"
                MinWidth="150"/>
            <ColumnDefinition
                Width="auto"/>
            <ColumnDefinition
                Width="*"
                MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="auto"/>
            <RowDefinition
                Height="*"
                MinHeight="20"/>
            <RowDefinition
                Height="auto"/>
            <RowDefinition
                MinHeight="65"/>
            <RowDefinition 
                Height="auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
